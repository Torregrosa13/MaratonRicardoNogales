@model List<Jugador>
@{
    ViewData["Title"] = "Plantilla";
}

@if(Model != null){

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h2 class="mb-0">@ViewData["NomEquipo"]</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Dorsal</th>
                                    <th>Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle fw-bold">
                                            @item.Dorsal
                                        </td>
                                        <td class="align-middle">
                                            @item.Nombre
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Total: @Model.Count() Jugadores</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('/images/IglesiaValverde.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        position: relative;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            z-index: -1;
        }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-primary {
        background-color: #0d6efd;
        opacity: 70;
        border-color: #0d6efd;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: 0;
    }
</style>
}else{
    <h1 style="margin-top: 150px;">@ViewData["MENSAJE"]</h1>
}