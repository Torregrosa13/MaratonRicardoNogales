@using MaratonRicardoNogales.Models
@model List<Partido>
@{
    ViewData["Title"] = "Partidos";
    var modelList = Model ?? new List<Partido>();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Partidos - @ViewData["Title"]</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Vendor CSS Files -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/aos.css" rel="stylesheet">
    <link href="~/css/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/css/glightbox.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <style>
        body.index-page {
            position: relative;
        }

        #partidos {
            background-color: transparent !important;
            margin-top: 50px;
        }

        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            object-fit: cover;
            opacity: 0.5;
        }

        .content-section {
            margin-top: 30px;
            padding: 30px 0;
            position: relative;
        }

        .card {
            max-height: 250px;
            overflow: hidden;
            margin-bottom: 100px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            background-color: white;
        }

        .card-body {
            padding: 15px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .finalizado {
            color: #28a745;
            font-weight: bold;
        }

        .no-finalizado {
            color: #dc3545;
            font-weight: bold;
        }

        .equipo {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .marcador {
            font-size: 1.5rem;
            font-weight: bold;
            padding: 0 10px;
        }

        .vs {
            font-size: 1.2rem;
            color: #6c757d;
        }

        .partido-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 10px;
        }

        .fase-badge {
            background-color: #007bff;
            color: white;
            padding: 3px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .welcome-section {
            text-align: center;
            padding: 40px 20px;
            margin-top: 80px;
            margin-bottom: 20px;
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .welcome-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #0d6efd;
            margin-bottom: 15px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        }

        .welcome-subtitle {
            font-size: 1.3rem;
            color: #495057;
            margin-bottom: 20px;
            font-weight: 300;
        }

        .welcome-text {
            font-size: 1.1rem;
            color: #6c757d;
            max-width: 800px;
            margin: 0 auto;
        }

        .divider {
            width: 80px;
            height: 4px;
            background-color: #0d6efd;
            margin: 20px auto;
            border-radius: 2px;
        }
    </style>
</head>

<body class="index-page">
    <!-- Imagen de fondo fija -->
    <img src="~/images/IglesiaValverde.jpg" alt="Fondo" class="background-image">

    <main class="main">
        <!-- Texto de Bienvenida -->
        <div class="container" data-aos="fade-up">
            <div class="welcome-section">
                <h1 class="welcome-title">Bienvenidos al Maratón Ricardo Nogales</h1>
                <h2 class="welcome-subtitle">Valverde de Burguillos</h2>
                <div class="divider"></div>
                <p class="welcome-text">
                    Disfruta de la pasión y la emoción del deporte en nuestro tradicional torneo. Un evento donde la comunidad se reúne para celebrar el talento local, la deportividad y la sana competición en un ambiente familiar y festivo. ¡Vive cada partido como si fuera una final!
                </p>
            </div>
        </div>

        <!-- Contenido de Partidos -->
        <section id="partidos" class="content-section">
            <div class="container" style="background-color:transparent">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="row" data-aos="fade-up" style="background-color:transparent">
                            @if (modelList.Any())
                            {
                                @foreach (var item in modelList)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <div class="partido-header">
                                                    <span class="fecha">@item.Fecha.ToString("dd/MM/yyyy HH:mm")</span>
                                                    <span class="fase-badge">@item.Fase</span>
                                                </div>

                                                <div class="text-center my-2">
                                                    <div class="equipo">@item.EquipoLocal.Nombre</div>
                                                    <div class="d-flex justify-content-center align-items-center my-2">
                                                        <span class="marcador">@item.GolesLocal</span>
                                                        <span class="vs">vs</span>
                                                        <span class="marcador">@item.GolesVisitante</span>
                                                    </div>
                                                    <div class="equipo">@item.EquipoVisitante.Nombre</div>
                                                </div>

                                                <div class="text-center my-3">
                                                    @if (item.Finalizado)
                                                    {
                                                        <span class="finalizado"><img src="~/images/clock.png" style="height:15px; width:15px;" /> Finalizado</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="no-finalizado"><img src="~/images/clock.png" style="height:15px; width:15px;" /> Pendiente</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center">
                                    <div class="alert alert-info">
                                        No hay partidos para mostrar
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>



    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/validate.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/glightbox.min.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/purecounter_vanilla.js"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js"></script>
</body>
</html>