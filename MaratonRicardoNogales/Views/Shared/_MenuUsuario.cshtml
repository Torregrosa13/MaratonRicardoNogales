﻿@if (Context.User.Identity.IsAuthenticated == false)
{
    <li class="nav-item">
        <a class="nav-link text-dark"
           asp-controller="Torneos"
           asp-action="Perfil">
            Log In
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark"
           asp-controller="Managed"
           asp-action="Logout">
            Log Out <span style="color:blue">@Context.User.Identity.Name</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark"
           asp-controller="Torneos"
           asp-action="Perfil">
            Mi perfil
        </a>
    </li>
}